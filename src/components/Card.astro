---
import Right from "../svg/right.astro";

const { title, href, text } = Astro.props;
---

<a href={href} class="group">
	<article
		class="max-w-[700px] h-[180px] relative bg-animation transition-transform bg-[#14213d] duration-300 flex flex-grow items-center p-4 m-4 rounded-3xl px-6 py-3 hover:translate-x-[-4px] hover:translate-y-[-4px] hover:rounded-3xl hover:shadow-[4px_4px_0px_black] active:translate-x-[0px] active:translate-y-[0px] active:rounded-3xl active:shadow-none"
	>
		<div class="flex flex-col p-4 text-pretty">
			<div class="flex gap-2 items-center">
				<slot />
				<h2 class="text-sm md:text-xl">{title}</h2>
			</div>
			<div>
				<p class="text-white/70 p-1 text-xs md:text-base flex-grow">
					{text}
				</p>
			</div>
		</div>
		<div>
			<Right
				class="group-hover:translate-x-2 transition-transform duration-500"
			/>
		</div>
	</article>
</a>
